{
  "name": "di-auth",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "16.13.0"
  },
  "scripts": {
    "build-ts": "tsc",
    "build": "yarn build-sass && yarn build-ts && yarn minfiy-build-js && yarn copy-assets",
    "build-sass": "rm -rf dist/public/style.css && sass --no-source-map src/assets/scss/application.scss dist/public/style.css --style compressed",
    "clean": "rm -rf dist node_modules logs.json",
    "clean-modules": "rm -rf node_modules",
    "copy-assets": "mkdir -p dist && copyfiles -u 1 src/**/*.njk dist/ src/locales/**/** dist/ src/config/*.txt dist/ && copyfiles -u 3 src/assets/javascript/*.js dist/public/scripts -e **/all.js && cp node_modules/govuk-frontend/govuk/all.js dist/public/scripts",
    "dev": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "dummy-server": "node dev-app.js",
    "depcheck": "depcheck",
    "lint": "eslint . --ext .ts,.js",
    "minfiy-build-js": "uglifyjs src/assets/javascript/application.js -o src/assets/javascript/application.js -c -m && uglifyjs src/assets/javascript/cookies.js -o src/assets/javascript/cookies.js -c -m && uglifyjs src/assets/javascript/showPassword.js -o src/assets/javascript/showPassword.js -c -m",
    "pretty": "prettier --write \"*/**/*.{ts,json}\"",
    "check-pretty": "prettier --check \"*/**/*.{ts,json}\"",
    "start": "node dist/server.js",
    "test:audit": "yarn audit",
    "test:integration": "rm -rf test/coverage && NODE_ENV=development nyc mocha -r dotenv/config  \"src/**/*-integration.test.ts\"",
    "test:unit": "rm -rf test/coverage && NODE_ENV=development nyc mocha --exclude \"src/**/*-integration.test.ts\"  \"test/unit/**/*.test.ts\" --recursive \"src/**/*.test.ts\"",
    "test": "rm -rf test/coverage && NODE_ENV=development nyc mocha -r dotenv/config  \"test/unit/**/*.test.ts\" --recursive \"src/**/*.test.ts\"",
    "test:coverage": "nyc report --reporter=lcov --reporter=text",
    "watch-node": "nodemon -r dotenv/config --inspect=0.0.0.0:9230 dist/server.js | pino-pretty",
    "watch-ts": "tsc -w",
    "watch-sass": "sass --watch src/assets/scss/application.scss dist/public/style.css"
  },
  "mocha": {
    "diff": true,
    "extension": [
      "js",
      "ts"
    ],
    "timeout": 20000,
    "recursive": true,
    "require": [
      "ts-node/register"
    ],
    "exit": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true
  },
  "dependencies": {
    "aws-sdk": "^2.1066.0",
    "axios": "^0.25.0",
    "connect-redis": "^6.0.0",
    "cookie-parser": "^1.4.5",
    "copyfiles": "^2.4.1",
    "csurf": "^1.11.0",
    "dompurify": "^2.3.4",
    "express": "^4.17.2",
    "express-session": "^1.17.2",
    "express-validator": "^6.13.0",
    "govuk-frontend": "^4.0.1",
    "helmet": "4.6.0",
    "i18next": "^21.6.5",
    "i18next-fs-backend": "^1.1.1",
    "i18next-http-middleware": "^3.2.0",
    "jsdom": "^19.0.0",
    "libphonenumber-js": "^1.9.44",
    "nunjucks": "^3.2.3",
    "@otplib/core": "^12.0.1",
    "@otplib/plugin-base32-enc-dec": "^12.0.1",
    "pino": "^7.6.0",
    "pino-http": "^6.6.0",
    "prettier": "^2.5.1",
    "qrcode": "^1.5.0",
    "redis": "^3.1.2",
    "uglify-js": "^3.14.5",
    "uuid": "^8.3.2",
    "xss": "^1.0.10",
    "xstate": "^4.26.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/cheerio": "^0.22.31",
    "@types/connect-redis": "0.0.18",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/i18next-fs-backend": "^1.1.1",
    "@types/mocha": "^9.1.0",
    "@types/mock-req-res": "^1.1.3",
    "@types/node": "^16.7.13",
    "@types/nunjucks": "^3.2.1",
    "@types/otplib": "^10.0.0",
    "@types/pino-pretty": "^4.7.5",
    "@types/qrcode": "^1.4.2",
    "@types/redis": "^2.8.31",
    "@types/sinon": "^10.0.6",
    "@types/sinon-chai": "^3.2.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "cheerio": "^1.0.0-rc.10",
    "concurrently": "^7.0.0",
    "copyfiles": "^2.4.1",
    "decache": "^4.6.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.1",
    "mocha": "^9.2.0",
    "mock-req-res": "^1.2.0",
    "nock": "^13.2.1",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "pino-pretty": "^7.3.0",
    "sass": "^1.49.8",
    "sinon": "^13.0.1",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.2.2",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.4",
    "uglify-js": "^3.14.5"
  },
  "resolutions": {
      "minimist": "1.2.6"
  }
}
