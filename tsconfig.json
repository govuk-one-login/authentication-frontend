{
  "compilerOptions": {
    "module": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    // do not check types in node_modules folder
    "sourceMap": true,
    "strict": true,
    // this rule requires a bit more work to turn on
    "strictNullChecks": false,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["@types", "/node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["test", "coverage", "src/**/tests", "src/**/*.test.ts"]
}
