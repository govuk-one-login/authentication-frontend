{% extends "common/layout/base.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% set pageTitleName = 'pages.changeSecurityCodesSignIn.title' | translate %}

{% block content %}

<h1 class="govuk-heading-l govuk-!-margin-top-0 govuk-!-margin-bottom-3">{{ 'pages.changeSecurityCodesSignIn.header' | translate }}</h1>

<p class="govuk-body">{{ 'pages.changeSecurityCodesSignIn.paragraph1' | translate }}</p>

<p class="govuk-body">{{ 'pages.changeSecurityCodesSignIn.paragraph2' | translate }}</p>

<form method="post" novalidate>
  <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
  {{ govukButton({
    text: 'general.continue.label' | translate,
    type: "Submit",
    preventDoubleClick: true
  }) }}
</form>

{{ govukDetails({
  summaryText: 'pages.changeSecurityCodesSignIn.details.summary' | translate,
  html: '<p class="govuk-body">' + ('pages.changeSecurityCodesSignIn.details.paragraph1' | translate) + '</p><p class="govuk-body">' + ('pages.changeSecurityCodesSignIn.details.paragraph2' | translate) + '</p>'
}) }}

{% set ga4Params = { nonce: scriptNonce, englishPageTitle: pageTitleName, dynamic: false } %}
{%- include "ga4-opl/template.njk" -%}

{% endblock %}

{% block scripts %}
  <script defer type="text/javascript" src="/public/scripts/prevent-double-form-submit.js"></script>
{% endblock %}
