{% extends "common/layout/base.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% set pageTitleName = 'pages.needToResetPassword.title' | translate %}

{% block content %}

    <h1 class="govuk-heading-l govuk-!-margin-top-0 govuk-!-margin-bottom-3">{{'pages.needToResetPassword.header' | translate }}</h1>

    <p class="govuk-body">{{'pages.needToResetPassword.paragraph1' | translate }}</p>

    <p class="govuk-body">{{'pages.needToResetPassword.paragraph2' | translate }}</p>

    <form action={{ resetPasswordCheckEmailURL }} method="get" novalidate="novalidate">

    {{ govukButton({
      "text": "general.continue.label" | translate,
      "type": "Submit",
      "preventDoubleClick": true,
      attributes: {
          "data-nav": "true",
          "data-link": "/undefined"
      }
    }) }}

    </form>

{{ga4OnPageLoad({ nonce: scriptNonce, statusCode: "200", englishPageTitle: pageTitleName, taxonomyLevel1: taxonomyLevel1, taxonomyLevel2: taxonomyLevel2, contentId: "", loggedInStatus: false, dynamic: false })}}

{% endblock %}
