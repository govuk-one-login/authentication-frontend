{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node", "@playwright/test"],
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "features/**/*.ts"]
}
